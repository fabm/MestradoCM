<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="categorias">
    <select id="byId" resultType="pt.ipg.mcm.entities.CategoriaEntity">
      SELECT CATEGORIA.NOME,
      CATEGORIA.DESCRICAO
      FROM CATEGORIA
      WHERE CATEGORIA.ID_CATEGORIA = #{id}
    </select>

    <select id="all" resultType="pt.ipg.mcm.entities.CategoriaEntity">
      SELECT ID_CATEGORIA,NOME, DESCRICAO FROM CATEGORIA
    </select>

    <update id="truncateTable">
        TRUNCATE TABLE TEST2
    </update>
</mapper>


