<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <description>Mestrado CM</description>
    <display-name>Mestrado CM</display-name>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>encomenda-ws</web-resource-name>
            <url-pattern>/Encomenda/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>cliente</role-name>
            <role-name>padeiro</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>utilizador-ws</web-resource-name>
            <url-pattern>/Utilizador/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>administrador</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>encomenda-rs</web-resource-name>
            <url-pattern>/rest/encomenda/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>cliente</role-name>
            <role-name>padeiro</role-name>
        </auth-constraint>
    </security-constraint>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cliente-ws</web-resource-name>
            <url-pattern>/Cliente/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>cliente</role-name>
            <role-name>administrador</role-name>
            <role-name>convidado</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>utilizador-rs</web-resource-name>
            <url-pattern>/rest/utilizador/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>administrador</role-name>
            <role-name>convidado</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>padeiro-ws</web-resource-name>
            <url-pattern>/Padeiro/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>administrador</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>categoria-ws</web-resource-name>
            <url-pattern>/Categoria/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>cliente</role-name>
            <role-name>administrador</role-name>
            <role-name>convidado</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>produto-ws</web-resource-name>
            <url-pattern>/Produto/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>cliente</role-name>
            <role-name>administrador</role-name>
            <role-name>convidado</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>login-ws</web-resource-name>
            <url-pattern>/Authentication/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>convidado</role-name>
            <role-name>cliente</role-name>
            <role-name>administrador</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>login-rs</web-resource-name>
            <url-pattern>/rest/authentication/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>convidado</role-name>
            <role-name>cliente</role-name>
            <role-name>administrador</role-name>
        </auth-constraint>
    </security-constraint>


    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>jdbcRealm</realm-name>
    </login-config>

    <security-role>
        <role-name>cliente</role-name>
    </security-role>

    <security-role>
        <role-name>administrador</role-name>
    </security-role>

    <security-role>
        <role-name>convidado</role-name>
    </security-role>

    <security-role>
        <role-name>padeiro</role-name>
    </security-role>


    <welcome-file-list>
        <welcome-file>welcome.html</welcome-file>
    </welcome-file-list>

</web-app>