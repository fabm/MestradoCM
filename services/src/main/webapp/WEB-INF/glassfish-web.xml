<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD
GlassFish Application Server 3.1 Servlet 3.0//EN"
        "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app>
    <context-root>/mcm/</context-root>
    <security-role-mapping>
        <role-name>convidado</role-name>
        <group-name>convidado</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>padeiro</role-name>
        <group-name>padeiro</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>cliente</role-name>
        <group-name>cliente</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>administrador</role-name>
        <group-name>administrador</group-name>
    </security-role-mapping>
    <class-loader delegate="true"/>
</glassfish-web-app>